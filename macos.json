{
  "compiler_path": "g++",
  "compiler_std": "c++20",
  "headers_path": [
    "./"
  ],
  "sources_path": ["IBKit/*.mm"],
  "output_name": "libIBKit.dylib",
  "compiler_flags": ["-fPIC", "-shared", "-framework AVKit", "-framework Cocoa", "-framework AVFoundation"],
  "cpp_macros": [
    "__IBKIT_DLL__=202401",
    "IBKIT_RELEASE_UUID=$(git rev-parse --abbrev-ref HEAD)-$(uuidgen)"
  ]
}

